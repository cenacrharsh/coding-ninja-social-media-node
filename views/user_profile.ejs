<link rel="stylesheet" href="/css/user_profile.css" />
<h1>Codeial / <%= title %></h1>

<% if (user.id == profile_user.id) { %>
<!-- * if user matches then only show the update form -->
<form action="/users/update/<%= profile_user.id %>" method="POST">
  <input
    type="text"
    name="name"
    placeholder="Your Name"
    value="<%= profile_user.name %> "
    required
  />

  <input
    type="email"
    name="email"
    placeholder="Your Email"
    value="<%= profile_user.email %> "
    required
  />

  <input type="submit" value="Update Profile" class="btn" />
</form>
<% } else { %>
<!-- * else show only the profile info -->
<h3>Name: <%= profile_user.name %></h3>
<h3>Email: <%= profile_user.email %></h3>
<% } %>
