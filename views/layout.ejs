<html>
  <head>
    <title><%= title %></title>

    <link rel="stylesheet" href="<%= assetPath('css/layout.css') %>" />
    <link rel="stylesheet" href="<%= assetPath('css/header.css') %>" />
    <link rel="stylesheet" href="<%= assetPath('css/footer.css') %>" />

    <!-- > noty js -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

    <!-- > jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <%- style %>
  </head>

  <body>
    <%- include('_header'); %>

    <!-- > since layout is above everything, we access our flash messages here -->

    <!-- * <% if(flash.success && flash.success.length > 0) { %>
    * <h5><%= flash.success %></h5>
    *<% } %> -->

    <main id="layout-main"><%- body %></main>

    <!-- body contains whatever is rendered and is inserted in the layouts -->

    <%- include('_footer'); %> <%- script %>

    <!-- ! noty js -->
    <script>
           <% if(flash.success && flash.success.length > 0) { %>

         new Noty({
           theme: 'relax',
           text: '<%= flash.success %>',
           type: 'success',
           layout: 'topRight',
           timeout: 1500
         }).show();

       <% } %>

       <% if(flash.error && flash.error.length > 0) { %>

       new Noty({
       theme: 'relax',
       text: '<%= flash.error %>',
       type: 'error',
       layout: 'topRight',
       timeout: 1500
       }).show();

      <% } %>
    </script>
  </body>
</html>
